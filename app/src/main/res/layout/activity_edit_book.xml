<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pro.nanosystems.firebasenewsample.EditBook">
    <EditText
        android:id="@+id/titleEd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="Enter Title"
        style="@style/EditInfo"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/authorEd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/EditInfo"
        android:hint="Enter Author"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/titleEd"
        app:layout_constraintStart_toStartOf="@+id/titleEd"
        app:layout_constraintTop_toBottomOf="@+id/titleEd" />

    <Button
        android:id="@+id/saveEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="@+id/authorEd"
        app:layout_constraintTop_toBottomOf="@+id/authorEd" />

    <Button
        android:id="@+id/delEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Delete"
        app:layout_constraintBaseline_toBaselineOf="@+id/saveEd"
        app:layout_constraintEnd_toStartOf="@+id/saveEd" />
</android.support.constraint.ConstraintLayout>
